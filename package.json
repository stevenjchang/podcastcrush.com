{
  "name": "portfolio-cra",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "autoprefixer": "^9.8.4",
    "cssnano": "^4.1.10",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "purgecss": "^2.3.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-gtm-module": "^2.0.10",
    "react-scripts": "3.4.1",
    "tailwindcss": "^1.4.6",
    "watch": "^1.0.2"
  },
  "scripts": {
    "start": "npm run build:css && react-scripts start",
    "build": "NODE_ENV=production npm run build:css && react-scripts build",
    "build:dev": "npm run build:css && react-scripts build",
    "build:css": "postcss src/styles/index.css -o src/tailwind.css",
    "watch:css": "postcss src/styles/index.css -o src/tailwind.css --watch",
    "watch": "watch 'npm run build:css' src/styles",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
